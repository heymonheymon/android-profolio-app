<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.portfolio.myportfolio.app.MainActivity"
    android:background="@color/colorBackGround">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        style="@style/Button.Orange"
        android:text="@string/media_streamer"
        android:id="@+id/media_streamer_button"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:onClick="handleMediaStreamerEvent" />

    <Button
        style="@style/Button.Orange"
        android:text="@string/super_duo1"
        android:id="@+id/super_duo1_button"
        android:layout_alignRight="@+id/media_streamer_button"
        android:layout_alignEnd="@+id/media_streamer_button"
        android:layout_alignLeft="@+id/media_streamer_button"
        android:layout_alignStart="@+id/media_streamer_button"
        android:layout_below="@+id/media_streamer_button"
        android:onClick="handleSuperDuo1Event" />

    <Button
        style="@style/Button.Orange"
        android:text="@string/super_duo2"
        android:id="@+id/super_duo2_button"
        android:layout_alignRight="@+id/super_duo1_button"
        android:layout_alignEnd="@+id/super_duo1_button"
        android:layout_alignLeft="@+id/super_duo1_button"
        android:layout_alignStart="@+id/super_duo1_button"
        android:layout_below="@+id/super_duo1_button"
        android:onClick="handleSuperDuo2Event" />

    <Button
        style="@style/Button.Orange"
        android:text="@string/ant_terminator"
        android:id="@+id/ant_terminator_button"
        android:layout_below="@+id/super_duo2_button"
        android:layout_alignRight="@+id/super_duo2_button"
        android:layout_alignEnd="@+id/super_duo2_button"
        android:layout_alignLeft="@+id/super_duo2_button"
        android:layout_alignStart="@+id/super_duo2_button"
        android:onClick="handleAntTerminatorEvent" />

    <Button
        style="@style/Button.Orange"
        android:text="@string/materialize"
        android:id="@+id/materialize_button"
        android:layout_below="@+id/ant_terminator_button"
        android:layout_alignRight="@+id/ant_terminator_button"
        android:layout_alignEnd="@+id/ant_terminator_button"
        android:layout_alignLeft="@+id/ant_terminator_button"
        android:layout_alignStart="@+id/ant_terminator_button"
        android:onClick="handleMaterializeEvent" />

    <Button
        style="@style/Button.Red"
        android:text="@string/capstone"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/materialize_button"
        android:layout_alignRight="@+id/materialize_button"
        android:layout_alignEnd="@+id/materialize_button"
        android:layout_alignLeft="@+id/materialize_button"
        android:layout_alignStart="@+id/materialize_button"
        android:onClick="handleCapstoneEvent" />
</RelativeLayout>
